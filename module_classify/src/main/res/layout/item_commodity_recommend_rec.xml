<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_147"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/commodity_recommend_image"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_110"
        android:layout_marginLeft="@dimen/dp_12"
        app:roundedCornerRadius="@dimen/dp_5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_13"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/commodity_recommend_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_43"
                android:layout_height="@dimen/dp_19"
                android:src="@drawable/image_tbk" />

            <TextView
                android:id="@+id/commodity_recommend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:text="【3瓶装】小紫瓶保湿乳液"
                android:textColor="#222222"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/commodity_recommend_linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/commodity_recommend_linear"
            android:layout_marginTop="@dimen/dp_11"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/commodity_recommend_reduce_price"
                android:layout_width="@dimen/dp_81"
                android:layout_height="@dimen/dp_22"
                android:background="@drawable/bg_text_led_securities"
                android:gravity="center"
                android:text="领券减50元"
                android:textColor="#222222"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_29"
                android:text="到手价"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/commodity_recommend_preferential_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥39"
                android:textColor="#000000"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/commodity_recommend_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:text="￥89"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/commodity_recommend_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已抢64120件"
                android:textColor="#999999"
                android:textSize="@dimen/dp_10" />

            <ProgressBar
                android:id="@+id/commodity_recommend_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="@dimen/dp_122"
                android:layout_height="@dimen/dp_9"
                android:layout_below="@id/commodity_recommend_number"
                android:layout_marginTop="@dimen/dp_6"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/bg_progress" />

            <TextView
                android:id="@+id/commodity_recommend_immediately_grab"
                android:layout_width="@dimen/dp_69"
                android:layout_height="@dimen/dp_31"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_text_immediately_grab"
                android:gravity="center"
                android:text="马上抢"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>