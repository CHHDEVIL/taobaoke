<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--设置底部导航背景-->
    <style name="main_bottom_back">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="pop_bottom_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_frombottom</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_tobottom</item>
    </style>
    <!--popupWindow出现动画-->
    <style name="animTranslate">
        <item name="android:windowEnterAnimation">@anim/translate_in</item>
        <item name="android:windowExitAnimation">@anim/translate_out</item>
    </style>

</resources>
