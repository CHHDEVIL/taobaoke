<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/mine_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F4F4"
            android:clipChildren="false">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140"
                android:background="#FA1D1D" />

            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_launcher_round" />

            <RelativeLayout
                android:id="@+id/mine_rela"
                android:layout_width="@dimen/dp_350"
                android:layout_height="@dimen/dp_150"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_100"
                android:background="@drawable/bg_mine_bottom"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <View
                    android:id="@+id/mine_temp1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_125"
                    android:background="@drawable/bg_mine_top" />

                <ImageView
                    android:id="@+id/mine_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_m_20"
                    android:src="@drawable/ic_launcher_round" />

                <TextView
                    android:id="@+id/mine_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mine_header"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:includeFontPadding="false"
                    android:text="登录/注册"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_18" />

                <LinearLayout
                    android:id="@+id/mine_temp2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mine_temp1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_50"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_5"
                            android:includeFontPadding="false"
                            android:text="0.00"
                            android:textColor="#ff0000"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_5"
                            android:includeFontPadding="false"
                            android:text="本月预估"
                            android:textColor="#646464"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_0_5"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="#A8A8A8" />

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_50"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_5"
                            android:includeFontPadding="false"
                            android:text="0.00"
                            android:textColor="#ff0000"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_5"
                            android:includeFontPadding="false"
                            android:text="本月预估"
                            android:textColor="#646464"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_0_5"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="#A8A8A8" />

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_50"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_5"
                            android:includeFontPadding="false"
                            android:text="0.00"
                            android:textColor="#ff0000"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_5"
                            android:includeFontPadding="false"
                            android:text="本月预估"
                            android:textColor="#646464"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_above="@id/mine_temp2"
                    android:background="#A8A8A8" />

                <TextView
                    android:id="@+id/mine_temp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:includeFontPadding="false"
                    android:text="今日预估"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_toRightOf="@id/mine_temp3"
                    android:includeFontPadding="false"
                    android:text="0.00"
                    android:textColor="#ff0000"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="查看详情"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="#cccccc" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/mine_linear"
                android:layout_width="@dimen/dp_350"
                android:layout_height="@dimen/dp_100"
                android:layout_below="@id/mine_rela"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/bg_mine_top"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="#cccccc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="集分宝"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="#cccccc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="提现"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="#cccccc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="粉丝"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="#cccccc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="订单"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/mine_advice"
                android:layout_width="@dimen/dp_350"
                android:layout_height="@dimen/dp_80"
                android:layout_below="@id/mine_linear"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_round" />

            <LinearLayout
                android:layout_width="@dimen/dp_350"
                android:layout_height="wrap_content"
                android:layout_below="@id/mine_advice"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_mine_top"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:includeFontPadding="false"
                    android:text="我的工具"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#a8a8a8" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mine_rec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:nestedScrollingEnabled="false">

                </android.support.v7.widget.RecyclerView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1000dp"
                    android:background="#cccccc" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <ImageView
        android:id="@+id/mine_tab_top"
        android:layout_width="@dimen/dp_350"
        android:layout_height="@dimen/dp_80"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_round"
        android:visibility="gone" />
</RelativeLayout>