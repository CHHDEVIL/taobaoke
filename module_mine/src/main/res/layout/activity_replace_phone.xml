<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/page_top" />

    <LinearLayout
        android:layout_width="@dimen/dp_295"
        android:layout_height="@dimen/dp_33"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_63"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_15"
            android:src="@drawable/icon_shoujihao" />

        <EditText
            android:id="@+id/phone_old_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/input_old_phone"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_295"
        android:layout_height="@dimen/dp_1"
        android:layout_gravity="center_horizontal"
        android:background="#eaeaea" />

    <LinearLayout
        android:layout_width="@dimen/dp_295"
        android:layout_height="@dimen/dp_33"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_24"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_15"
            android:src="@drawable/icon_shoujihao" />

        <EditText
            android:id="@+id/phone_new_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/input_new_phone"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_295"
        android:layout_height="@dimen/dp_1"
        android:layout_gravity="center_horizontal"
        android:background="#eaeaea" />

    <LinearLayout
        android:layout_width="@dimen/dp_295"
        android:layout_height="@dimen/dp_51"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_yanzhengma" />

        <EditText
            android:id="@+id/phone_code"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_34"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/input_code"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_15" />


        <TextView
            android:id="@+id/phone_get_code"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_27"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_get_code"
            android:gravity="center"
            android:text="@string/get_code"
            android:textColor="#fb4119"
            android:textSize="@dimen/sp_11" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_295"
        android:layout_height="@dimen/dp_1"
        android:layout_gravity="center_horizontal"
        android:background="#eaeaea" />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/phone_btn"
        android:layout_width="@dimen/dp_347"
        android:layout_height="@dimen/dp_45"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_34"
        android:background="@drawable/bg_btn_login"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_16" />
</LinearLayout>