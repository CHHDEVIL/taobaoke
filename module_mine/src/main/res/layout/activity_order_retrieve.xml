<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/page_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fgdfg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/dp_301"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_24">

            <EditText
                android:id="@+id/order_retrieve_edit"
                android:layout_width="@dimen/dp_301"
                android:layout_height="@dimen/dp_44"
                android:background="@drawable/bg_22_fff"
                android:drawableLeft="@drawable/search"
                android:drawablePadding="@dimen/dp_13"
                android:hint="请输入或粘贴淘宝订单编号"
                android:paddingLeft="@dimen/dp_19"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/order_retrieve_search"
                android:layout_width="@dimen/dp_67"
                android:layout_height="@dimen/dp_44"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_22_jianbian_right"
                android:gravity="center"
                android:text="搜索"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_15" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_348"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_22"
            android:background="@drawable/bg_10_fff_top"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_47"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="如何获取订单编号？"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#eeeeee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:background="@drawable/bg_num_yuan"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="1"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:text="打开手机“淘宝”"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="APP-我的淘宝-查看全部订单"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:background="@drawable/bg_num_yuan"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="2"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:text="复制订单编号"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="复制订单号，粘贴在上方搜索栏"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/dp_322"
                android:layout_height="@dimen/dp_202"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@drawable/ghfghfd" />

            <View
                android:layout_width="@dimen/dp_315"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_27"
                android:background="#eeeeee" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_16"
                android:text="查询规则"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/order_retrieve_rv"
                android:layout_width="@dimen/dp_313"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_16"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>