<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_169"
    android:layout_height="@dimen/dp_202"
    android:background="@drawable/pop_clear_cache"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/rv_yys_quanyi_img"
        android:layout_width="@dimen/dp_169"
        android:layout_height="@dimen/dp_151"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/rv_yys_quanyi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_11"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="#222222"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/rv_yys_quanyi_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_6"
        android:includeFontPadding="false"
        android:textColor="#ee0303"
        android:textSize="@dimen/sp_12" />
</LinearLayout>