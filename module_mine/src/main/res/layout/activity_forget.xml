<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">

        <ImageView
            android:id="@+id/forget_back"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_44"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_14"
            android:src="@drawable/icon_fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:includeFontPadding="false"
            android:text="@string/forget_password"
            android:textColor="#222222"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#dedede" />

    <LinearLayout
        android:layout_width="@dimen/dp_295"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_62"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_16"
            android:src="@drawable/icon_shoujihao" />

        <EditText
            android:id="@+id/forget_phone"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_34"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/input_phone"
            android:inputType="phone"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_295"
        android:layout_height="@dimen/dp_0_5"
        android:layout_gravity="center_horizontal"
        android:background="#eaeaea" />

    <LinearLayout
        android:layout_width="@dimen/dp_295"
        android:layout_height="@dimen/dp_51"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_yanzhengma" />

        <EditText
            android:id="@+id/forget_code"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_34"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/input_code"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_15" />


        <TextView
            android:id="@+id/forget_get_code"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_27"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_get_code"
            android:gravity="center"
            android:text="@string/get_code"
            android:textColor="#fb4119"
            android:textSize="@dimen/sp_11" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_295"
        android:layout_height="@dimen/dp_0_5"
        android:layout_gravity="center_horizontal"
        android:background="#eaeaea" />

    <LinearLayout
        android:layout_width="@dimen/dp_295"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_19"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_16"
            android:src="@drawable/icon_shurumima" />

        <EditText
            android:id="@+id/forget_paddword"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_34"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/input_new_password"
            android:inputType="textPassword"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_295"
        android:layout_height="@dimen/dp_0_5"
        android:layout_gravity="center_horizontal"
        android:background="#eaeaea" />

    <LinearLayout
        android:layout_width="@dimen/dp_295"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_19"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_16"
            android:src="@drawable/icon_shurumima" />

        <EditText
            android:id="@+id/forget_confirm_password"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_34"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/input_new_password_second"
            android:inputType="textPassword"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_295"
        android:layout_height="@dimen/dp_0_5"
        android:layout_gravity="center_horizontal"
        android:background="#eaeaea" />

    <TextView
        android:id="@+id/forget_btn"
        android:layout_width="@dimen/dp_295"
        android:layout_height="@dimen/dp_45"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_84"
        android:background="@drawable/bg_btn_login"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_16" />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_146"
        android:src="@drawable/background_wangji" />
</LinearLayout>