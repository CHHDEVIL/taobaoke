<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/rv_inside_assess_img"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_15" />

        <TextView
            android:id="@+id/rv_inside_assess_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_toRightOf="@id/rv_inside_assess_img"
            android:includeFontPadding="false"
            android:text="阿斯弗"
            android:textColor="#666666"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/rv_inside_assess_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rv_inside_assess_name"
            android:layout_alignLeft="@id/rv_inside_assess_name"
            android:layout_marginTop="@dimen/dp_4"
            android:includeFontPadding="false"
            android:text="一天前"
            android:textColor="#999999"
            android:textSize="@dimen/sp_9" />

        <TextView
            android:id="@+id/rv_inside_assess_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:drawableLeft="@drawable/icon_dianzan1"
            android:drawablePadding="@dimen/dp_5"
            android:text="赞"
            android:textColor="#666666"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/rv_inside_assess_zan_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@id/rv_inside_assess_zan"
            android:text="(10)"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <TextView
        android:id="@+id/rv_inside_assess_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_46"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_22"
        android:textColor="#666666"
        android:textSize="@dimen/sp_10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#ececec" />
</LinearLayout>