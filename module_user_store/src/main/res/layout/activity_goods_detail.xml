<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/goods_detail_xbanner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_250"
                app:AutoPlayTime="3000"
                app:isAutoPlay="false"
                app:pointNormal="@drawable/shape_noraml"
                app:pointSelect="@drawable/shape_select"
                app:pointTopBottomPadding="@dimen/dp_6"></com.stx.xhb.xbanner.XBanner>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/goods_detail_touming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">

        <ImageView
            android:id="@+id/goods_detail_back"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_3"
            android:src="@drawable/icon_fanhui_bai" />

        <ImageView
            android:id="@+id/goods_detail_share"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:padding="@dimen/dp_3"
            android:src="@drawable/icon_fenxiang1" />
    </RelativeLayout>


</RelativeLayout>